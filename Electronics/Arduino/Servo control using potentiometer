// Servo-motor control using potentiometer

#include <Servo.h>

Servo Potserve;

int Potread=0;
int ServoAttach_pin=11;

void setup()
{
  Potserve.attach(ServoAttach_pin);
}

void loop()
{
  Potread=analogRead(A3);
  int Potangle = map(Potread, 0, 1023, 0, 180);
  Potserve.write(Potangle);
  delay(20);

}  
